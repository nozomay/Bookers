<body>
 <h1>Books</h1>
   <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th clospan = "3"></th>
     </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  <h2>New book</h2>
  <p>
  <br>
  <%= form_with model:@book, local: true do |f| %>
   <% if @book.errors.any? %>
   <div>
    <div id="error_explanation">
     <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
   </div>
   <% end %>
  <h3>Title</h3>
   <%= f.text_field :title %>
  <h3>Body</h3>
   <%= f.text_area :body %>
  <br>
   <%= f.submit 'Create Book' %>
  <% end %>
</body>